{
  "extends": "airbnb-base",
  "env": {
    "mocha": true
  },
  "rules": {
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "never"
    }]
  },
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 6,
  },
}
